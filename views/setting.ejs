<!DOCTYPE html>
<% include ./head %>
<html>
<body>
    <div id="page-loader"><span class="page-loader-gif"></span></div>
    <header id="setting-header">
      <div id="header-content">
        <div id="sidebar-collapse-div"></div>
        <i id="sidebar-collapse" class="fa fa-angle-double-left"></i>
        <span id="header-text">BUTTERFLY</span>
      </div>
    </header>
    <div id="settings-wrapper" style = "background-color: oldlace;">
      <div id="sidebar">
        <div id="sidebar-userinfo">
          <img id="sidebar-bfly-logo" src="../images/logo2.gif">
          <div id="sidebar-username">
            <div>
              Hello, <%= name.first_name %> <%= name.last_name %> (<%= user.username %>) 
            </div>
          </div>
        </div>
        <ul id="sidebar-links">
          <li class="sidebar-separator">
            <span>DASHBOARD</span>
          </li>
          <li class="sidebar-link" onclick="showContainer('schedule')"><a href="#">
            <i class="fa fa-calendar-o"></i>
            <span>SCHEDULE</span>
          </a></li>
          <li class="sidebar-link" onclick="showContainer('sequence')"><a href="#">
            <i class="fa fa-tasks"></i>
            <span>SEQUENCE</span>
          </a></li>
          <li class="sidebar-separator">
            <span>MODIFICATION</span>
          </li>
          <li class="sidebar-link" onclick="showContainer('student-record')"><a href="#">
            <i class="fa fa-graduation-cap"></i>
            <span>STUDENT RECORD</span>
          </a></li>
          <li class="sidebar-link" onclick="showContainer('preferences')"><a href="#">
            <i class="fa fa-gears"></i>
            <span>PREFERENCES</span>
          </a></li>
          <li class="sidebar-separator">
            <span>SETTINGS</span>
          </li>
          <li class="sidebar-link" onclick="showContainer('profile')"><a href="#">
            <i class="fa fa-user"></i>
            <span>PROFILE</span>
          </a></li>
          <li class="sidebar-link"><a href="#">
            <i class="fa fa-sign-out"></i>
            <a href="/logout">LOG OUT</a>
          </a></li>
        </ul>
          <p class = 'footer'>Team Butterfly Â© 2016<br/>Concordia University</p>
      </div>
      <div id="settings-content-wrapper" style = "width: 85%">
            <div id="schedule-container" class="containerq">
              <h1>Schedule</h1>
            </div>
            <div id="sequence-container" class="containerq">
              <h1>Sequence</h1>
            </div>
            <div id="student-record-container" class="containerq">
              <h1>Student Record</h1>

         
      <form class="form-inline">
        <div class="form-group">
          <label class="sr-only">Add Course</label>
          <input class="form-control" id="courseID" placeholder="Course ID">
        </div>
        <button type="submit" class="btn btn-default" onsubmit="">Add</button>
 <button type="submit" class="btn btn-default" onsubmit="">Remove</button>      
      </form>

      </br> <!-- Formatting -->
      <table class='table table-bordered'>
         <tr>
            <th>Course ID</th><th>Course Name</th><th>Credits Received</th>
         </tr>

         <% for (var i = 0; i < jason.length; i++) { %>
          <tr>
            <td><%= jason[i].course_id %></td>
            <td><%= jason[i].course_name %></td>
            <td><%= jason[i].credits %></td>
          </tr>    
         <% } %>
      </table>             
            </div>
            <div id="preferences-container" class="containerq">
              <% include ./pref %>
            </div>
            <div id="profile-container" class="containerq">
              <h1>Profile</h1>
            </div>
      </div>
    </div>
  <script type="text/javascript" src="../javascripts/settings.js"></script>
  
  </body>

</html>
